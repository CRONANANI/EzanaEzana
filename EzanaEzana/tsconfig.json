{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./wwwroot/js/*"],
      "@/components/*": ["./wwwroot/js/react/components/*"],
      "@/services/*": ["./wwwroot/js/react/services/*"],
      "@/context/*": ["./wwwroot/js/react/context/*"],
      "@/types/*": ["./wwwroot/js/react/types/*"],
      "@/utils/*": ["./wwwroot/js/react/utils/*"]
    }
  },
  "include": [
    "wwwroot/js/**/*"
  ],
  "exclude": [
    "node_modules",
    "wwwroot/js/dist"
  ]
}
