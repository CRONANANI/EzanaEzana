@using EzanaEzana.ViewModels
@model AccountViewModel
@{
    ViewData["Title"] = "Manage Account";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-5 text-primary">Manage Your Account</h1>
            <p class="lead text-muted-foreground">Update your profile information and manage your account settings.</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-3">
            <partial name="_AccountNav" />
        </div>
        <div class="col-md-9">
            @if (TempData["StatusMessage"] != null)
            {
                <div class="p-4 bg-success text-success-foreground rounded-lg mb-4" role="alert">
                    <i class="bi bi-check-circle-fill me-2"></i> @TempData["StatusMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="shadcn-card mb-4">
                <div class="p-4 border-b border-border bg-primary text-primary-foreground">
                    <h4 class="mb-0"><i class="bi bi-person-fill me-2"></i>Profile Information</h4>
                </div>
                <div class="p-6">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-destructive"></div>
                        
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label text-foreground"></label>
                            <div class="input-group">
                                <span class="input-group-text bg-muted text-muted-foreground"><i class="bi bi-envelope"></i></span>
                                <input asp-for="Email" class="shadcn-input" disabled />
                            </div>
                            <span asp-validation-for="Email" class="text-destructive"></span>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="FirstName" class="form-label text-foreground"></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-muted text-muted-foreground"><i class="bi bi-person"></i></span>
                                    <input asp-for="FirstName" class="shadcn-input" />
                                </div>
                                <span asp-validation-for="FirstName" class="text-destructive"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="LastName" class="form-label text-foreground"></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-muted text-muted-foreground"><i class="bi bi-person"></i></span>
                                    <input asp-for="LastName" class="shadcn-input" />
                                </div>
                                <span asp-validation-for="LastName" class="text-destructive"></span>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="PhoneNumber" class="form-label text-foreground"></label>
                            <div class="input-group">
                                <span class="input-group-text bg-muted text-muted-foreground"><i class="bi bi-telephone"></i></span>
                                <input asp-for="PhoneNumber" class="shadcn-input" />
                            </div>
                            <span asp-validation-for="PhoneNumber" class="text-destructive"></span>
                        </div>
                        
                        <button type="submit" class="shadcn-btn shadcn-btn-primary">
                            <i class="bi bi-save me-2"></i>Save Changes
                        </button>
                    </form>
                </div>
            </div>

            <div class="shadcn-card mb-4">
                <div class="p-4 border-b border-border bg-info text-white">
                    <h4 class="mb-0"><i class="bi bi-shield-lock me-2"></i>Security</h4>
                </div>
                <div class="p-6">
                    <p class="text-muted-foreground">Manage your password and account security settings.</p>
                    <a asp-controller="Account" asp-action="ChangePassword" class="shadcn-btn bg-info text-white">
                        <i class="bi bi-key me-2"></i>Change Password
                    </a>
                </div>
            </div>

            <div class="shadcn-card">
                <div class="p-4 border-b border-border bg-destructive text-destructive-foreground">
                    <h4 class="mb-0"><i class="bi bi-exclamation-triangle me-2"></i>Danger Zone</h4>
                </div>
                <div class="p-6">
                    <p class="text-muted-foreground">Permanently delete your account and all associated data.</p>
                    <a asp-controller="Account" asp-action="DeleteAccount" class="shadcn-btn shadcn-btn-outline border-destructive text-destructive hover:bg-destructive hover:text-destructive-foreground">
                        <i class="bi bi-trash me-2"></i>Delete Account
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 