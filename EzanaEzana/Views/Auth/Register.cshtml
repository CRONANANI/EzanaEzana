@using EzanaEzana.ViewModels
@model RegisterViewModel
@{
    ViewData["Title"] = "Create Account";
    Layout = "_Layout";
}

<div class="min-h-screen flex items-center justify-center bg-muted py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
        <div>
            <div class="mx-auto h-12 w-12 flex items-center justify-center rounded-full bg-primary">
                <svg class="h-8 w-8 text-primary-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
                </svg>
            </div>
            <h2 class="mt-6 text-center text-3xl font-extrabold text-foreground">
                Create your account
            </h2>
            <p class="mt-2 text-center text-sm text-muted-foreground">
                Or
                <a asp-action="Login" class="font-medium text-primary hover:text-primary/80">
                    sign in to your existing account
                </a>
            </p>
        </div>
        
        <form class="mt-8 space-y-6" asp-action="Register" method="post">
            <div class="space-y-4">
                <div>
                    <label asp-for="FirstName" class="sr-only">First Name</label>
                    <input asp-for="FirstName" type="text" required 
                           class="shadcn-input" 
                           placeholder="First Name" />
                    <span asp-validation-for="FirstName" class="text-destructive text-sm"></span>
                </div>
                <div>
                    <label asp-for="LastName" class="sr-only">Last Name</label>
                    <input asp-for="LastName" type="text" required 
                           class="shadcn-input" 
                           placeholder="Last Name" />
                    <span asp-validation-for="LastName" class="text-destructive text-sm"></span>
                </div>
                <div>
                    <label asp-for="Email" class="sr-only">Email address</label>
                    <input asp-for="Email" type="email" required 
                           class="shadcn-input" 
                           placeholder="Email address" />
                    <span asp-validation-for="Email" class="text-destructive text-sm"></span>
                </div>
                <div>
                    <label asp-for="PublicUsername" class="sr-only">Public Username (Optional)</label>
                    <input asp-for="PublicUsername" type="text" 
                           class="shadcn-input" 
                           placeholder="Public Username (Optional)" />
                    <span asp-validation-for="PublicUsername" class="text-destructive text-sm"></span>
                </div>
                <div>
                    <label asp-for="Password" class="sr-only">Password</label>
                    <input asp-for="Password" type="password" required 
                           class="shadcn-input" 
                           placeholder="Password" />
                    <span asp-validation-for="Password" class="text-destructive text-sm"></span>
                </div>
                <div>
                    <label asp-for="ConfirmPassword" class="sr-only">Confirm Password</label>
                    <input asp-for="ConfirmPassword" type="password" required 
                           class="shadcn-input" 
                           placeholder="Confirm Password" />
                    <span asp-validation-for="ConfirmPassword" class="text-destructive text-sm"></span>
                </div>
            </div>

            <div class="flex items-center">
                <input id="agree-terms" name="agree-terms" type="checkbox" required
                       class="h-4 w-4 text-primary focus:ring-primary border-border rounded" />
                <label for="agree-terms" class="ml-2 block text-sm text-foreground">
                    I agree to the
                    <a href="#" class="text-primary hover:text-primary/80">Terms of Service</a>
                    and
                    <a href="#" class="text-primary hover:text-primary/80">Privacy Policy</a>
                </label>
            </div>

            <div asp-validation-summary="ModelOnly" class="text-destructive text-sm text-center"></div>

            <div>
                <button type="submit" 
                        class="shadcn-btn shadcn-btn-primary w-full">
                    <span class="absolute left-0 inset-y-0 flex items-center pl-3">
                        <svg class="h-5 w-5 text-primary-foreground" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd"></path>
                        </svg>
                    </span>
                    Create Account
                </button>
            </div>
        </form>

        <div class="mt-6">
            <div class="relative">
                <div class="absolute inset-0 flex items-center">
                    <div class="w-full border-t border-border"></div>
                </div>
                <div class="relative flex justify-center text-sm">
                    <span class="px-2 bg-muted text-muted-foreground">Already have an account?</span>
                </div>
            </div>

            <div class="mt-6">
                <a asp-action="Login" 
                   class="shadcn-btn shadcn-btn-outline w-full">
                    Sign in
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
