@{
    ViewData["Title"] = "Home";
}

<div class="container">
    <div class="row align-items-center py-5">
        <div class="col-md-6">
            <h1 class="display-4 fw-bold text-primary">Welcome to Ezana Investment Analytics</h1>
            <p class="lead text-muted-foreground">Connect your bank accounts and get personalized investment analytics based on your financial profile.</p>
            <p class="mb-4 text-muted-foreground">Our platform helps you make informed investment decisions by analyzing your spending patterns, income sources, and financial goals.</p>
            
            <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <a asp-controller="Dashboard" asp-action="Index" class="shadcn-btn shadcn-btn-primary btn-lg px-4 me-md-2">
                        <i class="bi bi-speedometer2"></i> Go to Dashboard
                    </a>
                    <a asp-controller="Account" asp-action="Index" class="shadcn-btn shadcn-btn-outline btn-lg px-4">
                        <i class="bi bi-person-gear"></i> Manage Account
                    </a>
                }
                else
                {
                    <a asp-area="Identity" asp-page="/Account/Register" class="shadcn-btn shadcn-btn-primary btn-lg px-4 me-md-2">
                        <i class="bi bi-person-plus"></i> Create Account
                    </a>
                    <a asp-area="Identity" asp-page="/Account/Login" class="shadcn-btn shadcn-btn-outline btn-lg px-4 me-md-2">
                        <i class="bi bi-box-arrow-in-right"></i> Login
                    </a>
                    <a asp-controller="Auth0" asp-action="Login" class="shadcn-btn bg-success text-white btn-lg px-4">
                        <i class="bi bi-shield-check"></i> Continue with Auth0
                    </a>
                }
            </div>
        </div>
        <div class="col-md-6 d-none d-md-block">
            <img src="~/images/ezana.png" alt="Ezana Investment Analytics" class="img-fluid rounded shadow-md" style="max-height: 400px; object-fit: contain;">
        </div>
    </div>

    <!-- React Home Component -->
    <div id="react-home-root"></div>

    <div class="row py-5">
        <div class="col-md-4 mb-4">
            <div class="shadcn-card h-100">
                <div class="card-body text-center p-6">
                    <i class="bi bi-bank text-primary" style="font-size: 3rem;"></i>
                    <h3 class="card-title mt-3 text-foreground">Connect Your Accounts</h3>
                    <p class="card-text text-muted-foreground">Securely link your bank accounts to get a comprehensive view of your finances.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="shadcn-card h-100">
                <div class="card-body text-center p-6">
                    <i class="bi bi-graph-up-arrow text-success" style="font-size: 3rem;"></i>
                    <h3 class="card-title mt-3 text-foreground">Analyze Your Finances</h3>
                    <p class="card-text text-muted-foreground">Get insights into your spending patterns, income sources, and investment opportunities.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="shadcn-card h-100">
                <div class="card-body text-center p-6">
                    <i class="bi bi-bar-chart-fill text-info" style="font-size: 3rem;"></i>
                    <h3 class="card-title mt-3 text-foreground">GRPV Analysis</h3>
                    <p class="card-text text-muted-foreground">Quantify your market risk tolerance using our proprietary GRPV model.</p>
                </div>
            </div>
        </div>
    </div>
    
    <!-- New Call-to-Action Section -->
    <div class="row py-5 bg-accent rounded-3 mb-5">
        <div class="col-12 text-center">
            <h2 class="display-5 fw-bold mb-4 text-accent-foreground">Ready to Start Your Investment Journey?</h2>
            <p class="lead mb-4 text-accent-foreground">Join thousands of investors who are making smarter financial decisions with Ezana.</p>
            @if (User.Identity?.IsAuthenticated != true)
            {
                <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                    <a asp-area="Identity" asp-page="/Account/Register" class="shadcn-btn shadcn-btn-primary btn-lg px-4 gap-3">
                        <i class="bi bi-person-plus"></i> Create Your Free Account
                    </a>
                    <a asp-controller="Auth0" asp-action="Login" class="shadcn-btn bg-success text-white btn-lg px-4 gap-3">
                        <i class="bi bi-shield-check"></i> Continue with Auth0
                    </a>
                </div>
            }
            else
            {
                <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                    <a asp-controller="Dashboard" asp-action="Index" class="shadcn-btn bg-success text-white btn-lg px-4 gap-3">
                        <i class="bi bi-speedometer2"></i> Go to Your Dashboard
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <!-- React Home Bundle -->
    <script src="~/js/dist/home.bundle.js"></script>
} 